rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 投票コレクション
    match /votes/{document=**} {
      // 読み取り：全員可能
      allow read: if true;
      
      // 作成：端末IDが設定されており、同じ端末・団体の組み合わせが存在しない場合のみ
      allow create: if request.resource.data.deviceId != null
        && request.resource.data.groupId != null
        && request.resource.data.score != null
        && request.resource.data.createdAt != null
        && !exists(/databases/$(database)/documents/votes/$(request.resource.data.deviceId + '_' + request.resource.data.groupId));
      
      // 更新・削除：不可
      allow update, delete: if false;
    }
    
    // 団体一覧コレクション
    match /groups/{document=**} {
      // 読み取り：全員可能
      allow read: if true;
      
      // 書き込み：認証済み管理者のみ
      allow write: if request.auth != null 
        && request.auth.token.admin == true;
    }
    
    // 集計結果コレクション
    match /results/{document=**} {
      // 読み取り：全員可能
      allow read: if true;
      
      // 書き込み：サーバーサイド（Cloud Functions）のみ
      allow write: if false;
    }
    
    // 設定コレクション
    match /config/{document=**} {
      // 読み取り：全員可能
      allow read: if true;
      
      // 書き込み：認証済み管理者のみ
      allow write: if request.auth != null 
        && request.auth.token.admin == true;
    }
  }
}